<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feed">

<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->
<!--        <EditText-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="30dp"-->
<!--            android:background="@drawable/botao_backgroud"/>-->

<!--    </LinearLayout>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/verdeZup"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/verdeZup"
            >

            <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:id="@+id/nameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gazeta"
                            android:textSize="30sp"
                            android:textColor="@color/amareloZup"/>




                        <ImageView
                            android:id="@+id/descricaoImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/Dinheiro"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="Image"
                            android:textSize="30sp" />

                <TextView
                    android:id="@+id/descricaoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descrição"
                    android:textSize="15sp" />





                        <com.google.android.material.bottomnavigation.BottomNavigationView
                             android:layout_height="40dp"
                             android:layout_width="match_parent"
                            app:menu="@menu/post_menu"
                            android:background="@drawable/backgroud_menu_interacao"
                            app:itemIconTint="@drawable/item_deslizar"
                            app:itemIconSize="18dp"
                            />



            </LinearLayout>


        </RelativeLayout>



    </ScrollView>


    <!-- TextView "Home" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/amareloZup"
        android:textSize="36sp" />

    <!-- RecyclerView -->

    <!-- BottomNavigationView -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/botao_backgroud"
        android:elevation="2dp"
        app:menu="@menu/botao_menu"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_deslizar"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"/>

</RelativeLayout>
