<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdeZup"
    tools:context=".ui.TelaChatUsuario">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:background="@color/amareloZup"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/voltar_preto_sem_traco" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/cinzaClaroZup"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/pesquisar">
                    </ImageView>
                    <EditText
                        android:layout_width="280dp"
                        android:layout_height="40dp"
                        android:hint="|"
                        android:inputType="textPassword">
                    </EditText>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="25dp"
                        android:src="@mipmap/close">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:paddingTop="20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@color/cinzaClaroZup"
                            android:src="@mipmap/icone_perfil_usuario">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:text="Nome de UsuÃ¡rio"
                            android:textSize="20dp"
                            android:textColor="@color/cinzaClaroZup">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="30dp"
                    android:background="@color/black"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icone_retangulo_msg"
                        android:layout_marginLeft="10dp">
                    </ImageView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icone_retangulo_menor_msg"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="230dp">
                    </ImageView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icone_retangulo_menor_msg"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="230dp">
                    </ImageView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icone_retangulo_menor_msg"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="230dp">
                    </ImageView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icone_retangulo_menor_msg"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="230dp">
                    </ImageView>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/icone_retangulo_pequeno_chat"
                        android:layout_marginLeft="10dp">
                    </ImageView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="22dp"
                        android:layout_alignParentTop="true"
                        android:background="@color/cinzaClaroZup"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="300dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="5dp"
                            android:hint="Digite aqui">
                        </TextView>
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="220dp"
                            android:layout_marginTop="3dp"
                            android:src="@mipmap/icone_enviar_msg">
                        </ImageView>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/amareloZup"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:onClick="pularOnboarding"
                    android:src="@mipmap/icone_casa"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:onClick="pularOnboarding"
                    android:src="@mipmap/icone_influencers"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/amareloZup"
                    android:gravity="center"
                    android:onClick="pularOnboarding"
                    android:src="@mipmap/icone_notificacao"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:onClick="pularOnboarding"
                    android:src="@mipmap/icone_config"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>