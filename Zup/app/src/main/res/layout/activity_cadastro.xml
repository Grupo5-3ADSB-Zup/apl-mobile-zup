<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/verdeZup"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:src="@mipmap/logo_da_zup" />


        <EditText
            android:id="@+id/etNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/amareloZup"
            android:hint="@string/nomeUsuario"
            android:padding="16dp"
            android:textColorHint="@color/amareloZup"
            android:inputType="text" />


        <EditText
            android:id="@+id/etSobrenome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/amareloZup"
            android:hint="@string/sobrenomeUsuario"
            android:padding="16dp"
            android:textColorHint="@color/amareloZup" />


        <EditText
            android:id="@+id/etCpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/amareloZup"
            android:hint="CPF"
            android:inputType="number"
            android:padding="16dp"
            android:textColorHint="@color/amareloZup" />


        <EditText
            android:id="@+id/etCnpj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/amareloZup"
            android:hint="CNPJ"
            android:inputType="number"
            android:padding="16dp"
            android:textColorHint="@color/amareloZup" />


        <Button
            android:id="@+id/avancarCadastroButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/amareloZup"
            android:text="@string/avancar"
            android:textColor="@color/verdeZup"
            android:onClick="avancarCadastro"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>