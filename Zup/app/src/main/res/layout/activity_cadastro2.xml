<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#013440"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:src="@mipmap/zup" />

        <EditText
            android:id="@+id/etUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#F2CB05"
            android:hint="Usuário"
            android:padding="16dp"
            android:textColorHint="#F2CB05" />

        <EditText
            android:id="@+id/etSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#F2CB05"
            android:hint="Senha"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColorHint="#F2CB05" />

        <EditText
            android:id="@+id/etInfluencer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#F2CB05"
            android:hint="Influencer"
            android:padding="16dp"
            android:textColorHint="#F2CB05" />

        <EditText
            android:id="@+id/etFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#F2CB05"
            android:hint="Foto de perfil"
            android:inputType="text"
            android:padding="16dp"
            android:textColorHint="#F2CB05" />

        <CheckBox
            android:id="@+id/checkBoxId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Aceitar os termos e condições"
            android:textColor="#F2CB05" />

        <Button
            android:id="@+id/cadastrarButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#F2CB05"
            android:text="Cadastrar"
            android:textColor="#013440" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>