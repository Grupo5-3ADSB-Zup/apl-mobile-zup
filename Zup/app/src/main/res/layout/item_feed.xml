<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/PostEmissora"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="30sp"
        />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/PostTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/amareloZup"
            android:textSize="30sp" />


        <ImageView
            android:id="@+id/PostImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/dinheiro"
            android:text="Image"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/PostDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="15sp" />


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/backgroud_menu_interacao"
            app:itemIconSize="18dp"
            app:itemIconTint="@drawable/item_deslizar"
            app:menu="@menu/post_menu" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>