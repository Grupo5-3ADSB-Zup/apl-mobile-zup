<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/verdeZup"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text=""
            android:textColor="@color/amareloZup"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/usuarioListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFDDDDDD" />

        <Button
            android:id="@+id/extrairUsuarioButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/amareloZup"
            android:text=""
            android:textColor="@color/verdeZup" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>