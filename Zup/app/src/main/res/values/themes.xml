<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Zup" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <!--    TÍTULO LOGIN E CADASTRO-->

    <style name="tituloLoginCadastro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">@color/verdeZup</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    TÍTULO ONBOARDING-->


    <style name="tituloOnboarding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">150dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/amareloZup</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--    IMAGEM ONBOARDING-->

    <style name="imagemOnboarding">
        <item name="android:layout_width">235dp</item>
        <item name="android:layout_height">245dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">75dp</item>
    </style>


    <!--    TEXTO EXPLICATIVO ONBOARDING-->

    <style name="textoOnboarding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:textColor">@color/amareloZup</item>
        <item name="android:textSize">18dp</item>
    </style>


    <style name="campoDeEntrada">
        <item name="android:layout_marginTop">16dp</item>
        <item name="backgroundTint">@color/amareloZup</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColorHint">@color/amareloZup</item>
    </style>


    <style name="Theme.Zup" parent="Base.Theme.Zup" />
    <style name="AtivarAnimacaoDeslizar" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/delizar_para_direita</item>
        <item name="android:activityOpenExitAnimation">@anim/deslizar_para_sair_esquerda</item>
    </style>
</resources>